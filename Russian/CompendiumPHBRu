	<spell>
		<name>Сигнал тревоги</name>
		<level>1</level>
		<school>A</school>
		<ritual>Yes</ritual>
		<time>1 минута</time>
		<range>30 футов</range>
		<components>В, С, М (колокольчик и серебряная проволочка)</components>
		<duration>8 часов</duration>
